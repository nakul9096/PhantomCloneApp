<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F0F0F"
    android:padding="24dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"
        app:tint="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@LushGlow3227"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/myfont"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_profile"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_avatar_bg"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@LushGlow3227"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/myfont"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š 0 followers"
            android:textColor="#B388FF"
            android:textSize="14sp"
            android:fontFamily="@font/myfont"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ•’ June 2025"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:fontFamily="@font/myfont"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Edit Profile"
        android:textColor="#0F0F0F"
        android:textSize="16sp"
        android:fontFamily="@font/myfont"
        android:backgroundTint="#B388FF"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/rounded_button_gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/noactivity_anim"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_speed="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No activity to show yet."
            android:textColor="#888888"
            android:textSize="14sp"
            android:fontFamily="@font/myfont"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</LinearLayout>
