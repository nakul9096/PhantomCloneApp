<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="24dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_marginTop="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:id="@+id/backbtn"
        android:focusable="true"
        android:layout_marginBottom="16dp"
        app:tint="#FFFFFF" />

    <FrameLayout
        android:id="@+id/profileContainer"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_bg">

        <TextView
            android:id="@+id/accountInitials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="L"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/myfont"/>

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="0dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@drawable/rounded_button_secondary"
            android:padding="6dp"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@LushGlow3227"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/myfont"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 followers"
            android:textColor="#B388FF"
            android:textSize="14sp"
            android:fontFamily="@font/myfont"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 2025"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:fontFamily="@font/myfont"/>
    </LinearLayout>

    <Button
        android:id="@+id/editProfilebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/myfont"
        android:background="@drawable/rounded_button_gradient"
        android:paddingVertical="14dp"
        android:layout_marginBottom="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/noactivity_anim"
            app:lottie_speed="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/myfont"
            android:text="No activity to show yet."
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>