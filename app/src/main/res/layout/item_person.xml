<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/person_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile" android:scaleType="centerCrop"
        android:background="@drawable/rounded_circle_shape"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe" android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/myfont"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/person_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@johndoe" android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:fontFamily="@font/myfont"/>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:tint="#AAAAAA"/>
</LinearLayout>