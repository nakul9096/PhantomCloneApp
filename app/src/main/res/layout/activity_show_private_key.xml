<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fitsSystemWindows="true">

    <!-- Top AppBar/Header -->
    <LinearLayout
        android:id="@+id/private_key_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#121212">

        <ImageView
            android:id="@+id/back_button_private_key"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Your Private Key"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/myfont"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Bottom Fixed Section (Checkbox and Button) -->
    <LinearLayout
        android:id="@+id/private_key_bottom_fixed_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#121212"
        android:elevation="8dp">

        <!-- Confirmation Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/checkbox_understand_private_key_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF5722"
                android:checked="false"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="I understand that sharing my private key could result in permanent loss of funds."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/myfont"/>
        </LinearLayout>
        <Button
            android:id="@+id/continue_button_private_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_secondary"
            android:backgroundTint="#FF5722"
            android:fontFamily="@font/myfont"
            android:paddingVertical="14dp"
            android:text="Continue"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content Area - Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/private_key_toolbar"
        android:layout_above="@id/private_key_bottom_fixed_section"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp">

            <!-- Warning Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/stat_sys_warning"
                android:background="@drawable/circle_avatar_bg"
                android:backgroundTint="#FF5722"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep Your Private Key\nSecret"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/myfont"
                android:layout_marginBottom="32dp"/>

            <!-- Warning Points -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning_circle"
                        app:tint="#FF5722"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your private key is like a password for your account."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="@font/myfont"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning_circle"
                        app:tint="#FF5722"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If someone gets it, they can drain your wallet. There's no way to recover lost funds."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="@font/myfont"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning_circle"
                        app:tint="#FF5722"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Never share it with anyoneâ€”no person, website, or app."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="@font/myfont"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>