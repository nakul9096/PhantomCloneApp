<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:background="@drawable/rounded_card_item_background"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/token_icon_placeholder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_bitcoin" app:tint="#FFFFFF"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_circle_shape"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/token_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/myfont"
            android:text="Token Name" /> <TextView
        android:id="@+id/token_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:fontFamily="@font/myfont"
        android:text="SYM • $0.00 • +0.00%" /> </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:tint="#888888" />

</LinearLayout>