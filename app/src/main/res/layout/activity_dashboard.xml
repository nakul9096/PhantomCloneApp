<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <FrameLayout
        android:id="@+id/nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            xmlns:lottie="http://schemas.android.com/apk/res-auto"
            android:background="#121212">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/myprofilebtn"
                        android:background="@drawable/circle_bg"
                        android:padding="4dp"
                        android:src="@drawable/ic_profile" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\@BriefLava527"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:fontFamily="@font/myfont" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account 1"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/myfont" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/scanqr"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_qr_code"
                            app:tint="#B39DDB" />

                        <ImageView
                            android:layout_width="28dp"
                            android:id="@+id/searchbtn"
                            android:layout_height="28dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_search"
                            app:tint="#B39DDB" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card_dark"
                    android:padding="24dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center_horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        lottie:lottie_autoPlay="true"
                        lottie:lottie_loop="true"
                        lottie:lottie_rawRes="@raw/loadinganim"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome,\n@BriefLava527"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/myfont"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Solana (SOL) to your wallet to get started"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/myfont" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy SOL with cash"
                        android:id="@+id/buysolwithcashbtn"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:fontFamily="@font/myfont"
                        android:backgroundTint="#B39DDB"
                        android:layout_marginTop="20dp"
                        android:paddingVertical="14dp"
                        android:background="@drawable/rounded_button" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transfer crypto"
                        android:id="@+id/transfercryptobtn"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="@font/myfont"
                        android:backgroundTint="#2B2B2B"
                        android:layout_marginTop="12dp"
                        android:paddingVertical="14dp"
                        android:background="@drawable/rounded_button_secondary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/receivebtn"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/action_card_bg"
                        android:paddingVertical="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_receive"
                            app:tint="#B39DDB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Receive"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/myfont" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/sendbtn"
                        android:background="@drawable/action_card_bg"
                        android:paddingVertical="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_send"
                            app:tint="#B39DDB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Send"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/myfont" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/swapbtn"
                        android:gravity="center"
                        android:background="@drawable/action_card_bg"
                        android:paddingVertical="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_swap"
                            app:tint="#B39DDB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Swap"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/myfont" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/buybtn"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/action_card_bg"
                        android:paddingVertical="16dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_buy"
                            app:tint="#B39DDB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Buy"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/myfont" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="48dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Assets"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/myfont"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/assestBitcoin"
                        android:background="@drawable/rounded_button_secondary"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="4dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_bitcoin" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bitcoin"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 BTC"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/assestEthereum"
                        android:background="@drawable/rounded_button_secondary"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="4dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_eth" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:text="Ethereum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 ETH"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:text="$0.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/assestPolygon"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button_secondary"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="4dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_polygon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Polygon"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 POL"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button_secondary"
                        android:padding="16dp"
                        android:id="@+id/assestSolana"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="4dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_solana" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solana"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 SOL"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button_secondary"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/assestSui"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="4dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_sui" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sui"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 SUI"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/myfont" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp"
                                android:fontFamily="@font/myfont" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</RelativeLayout>